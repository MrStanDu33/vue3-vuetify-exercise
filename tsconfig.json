{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.vue",
    "src/plugins/router/index.ts",
    "src/event.d.tsd.ts",
    ".storybook/**/*.ts"
  ],
  "module": "esnext",
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
